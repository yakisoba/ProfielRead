<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/background_1">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="left"
		android:text="プロフィール表示" android:textColor="#0d0d0d" android:textSize="20sp"
		android:paddingTop="10sp" android:paddingLeft="10sp"
		android:paddingBottom="10sp" />

	<LinearLayout android:id="@+id/TableLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_marginLeft="20sp"
		android:layout_marginRight="20sp" android:layout_marginBottom="10sp"
		android:padding="20sp" android:background="@drawable/background_2"
		android:orientation="vertical">

		<FrameLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<ImageView android:id="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/android_vector" />

			<TextView android:layout_width="wrap_content" android:text="タグをかざして下さい"
				android:layout_height="wrap_content" android:textColor="#0d0d0d"
				android:textSize="16sp" android:id="@+id/tag"
				android:layout_gravity="center|bottom" />

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical">

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/name" />

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/sex" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/blood" />
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/age" />

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/height" />

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/weight" />

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/hobby" />

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:textColor="#0d0d0d"
					android:textSize="24sp" android:id="@+id/music" />


			</LinearLayout>
		</FrameLayout>
	</LinearLayout>
</LinearLayout>